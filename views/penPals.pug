extends layout.pug 

append head
  link(rel='stylesheet' href='/stylesheets/penpals.css')
  script(type='text/javascript' src='/javascripts/navbar.js')

block content
  div(class="nav-bar-container")
  //- INDIVIDUAL NAME PROFILE CLICKABLE:
  a(href=`/profiles/${user.id}` class="user-name-link")= user.pen_name
  //- FOLLOWERS CLICKABLE??:

  a(href=`/profiles/${user.id}/penpals` class="pen-pal-link")= `${penPalCount} Pen Pals`
  //- a(href in a BUTTON/DROPDOWN?? to go to user's personal profile)
  //- a(href='/profle???' class="")
  a(href=`/newsfeed`) Article Home
  a(href=`/profiles/${loggedIn}`) My Profile
  form(action="/profiles/logout" method="post")
    button(type="submit") Log Out
    
  div(class="pen-pal-container")
    div(class="pen-pal-contents")
      ul 
        each penpal in user.followers 
          li(class="pen-pal-list-item")=penpal.pen_name