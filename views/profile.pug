extends layout.pug 

block content 
  //- THIS IS THE CURRENT UNIFORM NAV BAR.
  div(class="nav-bar-container")
  //- INDIVIDUAL NAME PROFILE CLICKABLE:
  a(href=`/profiles/${user.id}` class="user-name-link")= user.pen_name
  //- FOLLOWERS CLICKABLE??:

  a(href=`/profiles/${user.id}/penpals` class="pen-pal-link")= `${penPalCount} Pen Pals`
  //- a(href in a BUTTON/DROPDOWN?? to go to user's personal profile)
  //- a(href='/profle???' class="")
  a(href=`/newsfeed`) Article Home
  a(href=`/profiles/${loggedIn}`) My Profile
  form(action="/profiles/logout" method="post")
    button(type="submit") Log Out

  div(class="main-container")
    div(class="pic-bio-container")
      ul(class="author-info-list") 
        img(id="profile-pic" src=`${user.profile_pic}`)
        li(id="profile-bio")=user.bio
    div(class="user-article-container")
      ul
        each article in user.Articles 
          li(class="article-title"): a(href=`/articles/${article.id}`)= article.title
          img(class="article-pic" src=`${article.imageSrc}`)
          li(class="article-content")= `${article.content}...`
          li(class="stamps-comments")= article.Comments.length
          
